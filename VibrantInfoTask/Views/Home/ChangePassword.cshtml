@model VibrantInfoTask.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "_LayoutLogin";
}

<h1>Change Password</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword" method="post">
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="OldPassword">Old Password</label>
                <input type="password" class="form-control" id="OldPassword" asp-for="OldPassword">
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="NewPassword">New Password</label>
                <input type="password" class="form-control" id="NewPassword" asp-for="NewPassword">
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ConfirmPassword">Confirm Password</label>
                <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Change Password</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
